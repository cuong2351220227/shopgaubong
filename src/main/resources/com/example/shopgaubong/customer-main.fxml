<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="contentPane" prefHeight="700" prefWidth="1200" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shopgaubong.controller.CustomerMainController">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>
                <Label text="UCOP - Shop Gấu Bông">
                    <font>
                        <Font name="System Bold" size="20" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Xin chào">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>
                <Button onAction="#handleLogout" text="Đăng xuất" />
            </HBox>
            <Separator />
        </VBox>
    </top>

    <left>
        <VBox prefWidth="250" spacing="5">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label text="MENU">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>

            <Button alignment="CENTER_LEFT" onAction="#handleBrowseProducts" prefHeight="35" prefWidth="230" text="Xem sản phẩm">
                <padding>
                    <Insets left="10" />
                </padding>
            </Button>

            <Button alignment="CENTER_LEFT" onAction="#handleViewCart" prefHeight="35" prefWidth="230" text="Giỏ hàng">
                <padding>
                    <Insets left="10" />
                </padding>
            </Button>

            <Button alignment="CENTER_LEFT" onAction="#handleViewOrders" prefHeight="35" prefWidth="230" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Đơn hàng của tôi">
                <padding>
                    <Insets left="10" />
                </padding>
            </Button>

            <Separator />

            <Button alignment="CENTER_LEFT" onAction="#handleProfile" prefHeight="35" prefWidth="230" text="Thông tin cá nhân">
                <padding>
                    <Insets left="10" />
                </padding>
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <Label text="Chào mừng đến với Shop Gấu Bông">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>

            <Label text="Vui lòng chọn chức năng từ menu bên trái">
                <font>
                    <Font size="16" />
                </font>
            </Label>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label text="UCOP Shop Gấu Bông v1.0">
                <font>
                    <Font size="10" />
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
